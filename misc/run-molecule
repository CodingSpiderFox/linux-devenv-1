#!/bin/bash
set -eu

function main() {
    local subcommand=$1
    pushd src/playbooks/roles/firefox && molecule ${subcommand} && popd
    pushd src/playbooks/roles/git && molecule ${subcommand} && popd
    pushd src/playbooks/roles/nkf && molecule ${subcommand} && popd
    pushd src/playbooks/roles/zip && molecule ${subcommand} && popd
}

main "$@"
